<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.HTMLEditor?>
<?import javafx.scene.web.WebView?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.MainController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <left>
      <VBox prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchField" promptText="Search entries..." />
            <ListView fx:id="entryListView" VBox.vgrow="ALWAYS" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#prepareNewEntry" text="New Entry" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteSelectedEntry" text="Delete Entry" />
            <ToggleButton fx:id="themeToggle" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#toggleTheme" text="Dark Mode" />
            <HBox alignment="CENTER">
               <children>
                  <ProgressIndicator fx:id="progressIndicator" maxHeight="30.0" maxWidth="30.0" visible="false" />
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <TextField fx:id="titleField" promptText="Entry Title" />
            <HTMLEditor fx:id="contentEditor" htmlText="" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <WebView fx:id="entryPreview" prefHeight="400.0" prefWidth="200.0" visible="false" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#saveEntry" text="Save" />
                  <Button mnemonicParsing="false" onAction="#loadEntryForEditing" text="Edit" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="statusLabel" text="Ready" textFill="GRAY" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>